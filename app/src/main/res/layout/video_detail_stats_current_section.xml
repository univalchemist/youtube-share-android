        <ImageView
            android:id="@+id/angerImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,1:1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_anger"
            app:layout_constraintStart_toEndOf="@+id/disgustImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/angerLabel"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:text="@string/anger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/angerLabel"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/raleway_semibold"
            app:fontFamily="@font/raleway_semibold"
            android:textSize="@dimen/list_item_subtitle_text"
            app:layout_constraintTop_toBottomOf="@+id/angerImage"
            app:layout_constraintBottom_toTopOf="@+id/angerText"
            app:layout_constraintEnd_toEndOf="@+id/angerImage"
            app:layout_constraintStart_toStartOf="@+id/angerImage"
            app:layout_constraintHorizontal_bias="0.5"/>

        <TextView
            android:text="@string/emo_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/angerText"
            android:fontFamily="@font/raleway_semibold"
            app:fontFamily="@font/raleway_semibold"
            android:textSize="@dimen/list_item_subtitle_text"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/angerImage"
            app:layout_constraintStart_toStartOf="@+id/angerImage"
            app:layout_constraintTop_toBottomOf="@+id/angerLabel"
            app:layout_constraintHorizontal_bias="0.5"
        />

